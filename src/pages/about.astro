---
import BaseLayout from '../layouts/BaseLayout.astro';
import Badge from '../components/Badge.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const currentLearning = [
  { topic: 'Rust', description: 'Systems programming and WebAssembly' },
  { topic: 'Machine Learning', description: 'Practical ML for software engineers' },
  { topic: 'Technical Writing', description: 'Better documentation and communication' },
];

const currentlyWorkingOn = [
  { item: 'Personal Website', description: 'This site - built with Astro and Tailwind' },
  { item: 'Open Source', description: 'Contributing to developer tools' },
  { item: 'Reading', description: 'Project Hail Mary by Andy Weir' },
];

const interests = [
  'Open source software',
  'Developer experience',
  'Distributed systems',
  'Mechanical keyboards',
  'Coffee brewing',
  'Hiking',
  'Sci-fi books',
  'Minimalism',
];

const personalLinks = [
  { 
    label: 'Blog', 
    href: '/blog', 
    description: 'Thoughts on software engineering',
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/></svg>'
  },
  { 
    label: 'Projects', 
    href: '/projects', 
    description: 'Things I have built',
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>'
  },
  { 
    label: 'Digital Garden', 
    href: '/garden', 
    description: 'Growing ideas and notes',
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>'
  },
];
---

<BaseLayout 
  title="About | Liam Nguyen"
  description="A bit about me, my interests, and what I am currently working on."
  section="personal"
>
  <div class="container-custom">
    <Breadcrumb items={[
      { label: 'Home', href: '/' },
      { label: 'About' }
    ]} />
    
    {/* Hero Section */}
    <section class="py-12 lg:py-20">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">
        {/* Avatar */}
        <div class="lg:col-span-1">
          <div class="w-48 h-48 mx-auto lg:mx-0 rounded-full bg-gradient-to-br from-[var(--color-primary)] to-[var(--color-accent)] flex items-center justify-center shadow-xl">
            <span class="text-5xl font-bold text-white">LN</span>
          </div>
        </div>
        
        {/* Intro */}
        <div class="lg:col-span-2">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-[var(--color-text)] mb-6">
            Hi, I am Liam
          </h1>
          
          <div class="space-y-4 text-lg text-[var(--color-text-secondary)] leading-relaxed">
            <p>
              I'm a software engineer based in San Francisco, currently building distributed systems at TechCorp Inc. 
              When I'm not writing code, you'll find me exploring new technologies, contributing to open source, 
              or getting lost in a good sci-fi novel.
            </p>
            <p>
              I believe in the power of technology to solve real problems, but also in the importance of 
              building sustainable, maintainable systems. The best code is often the code you don't have to write.
            </p>
            <p>
              This website is my digital home - a place to share what I'm learning, document my projects, 
              and connect with like-minded people. Feel free to explore and reach out!
            </p>
          </div>
        </div>
      </div>
    </section>

    <hr class="border-[var(--color-border)]" />

    {/* Currently Section */}
    <section class="py-12">
      <h2 class="text-2xl font-bold text-[var(--color-text)] mb-8">
        Currently
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="card">
          <h3 class="text-lg font-semibold text-[var(--color-text)] mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
            </svg>
            Learning
          </h3>
          <ul class="space-y-3">
            {currentLearning.map((item) => (
              <li class="flex items-start gap-3">
                <span class="text-[var(--color-accent)] mt-1">•</span>
                <div>
                  <span class="font-medium text-[var(--color-text)]">{item.topic}</span>
                  <span class="text-[var(--color-text-muted)]"> — {item.description}</span>
                </div>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="card">
          <h3 class="text-lg font-semibold text-[var(--color-text)] mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
            Working On
          </h3>
          <ul class="space-y-3">
            {currentlyWorkingOn.map((item) => (
              <li class="flex items-start gap-3">
                <span class="text-[var(--color-accent)] mt-1">•</span>
                <div>
                  <span class="font-medium text-[var(--color-text)]">{item.item}</span>
                  <span class="text-[var(--color-text-muted)]"> — {item.description}</span>
                </div>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    <hr class="border-[var(--color-border)]" />

    {/* Personal Links */}
    <section class="py-12">
      <h2 class="text-2xl font-bold text-[var(--color-text)] mb-8">
        Explore My Work
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {personalLinks.map((link) => (
          <a 
            href={link.href}
            class="card group hover:border-[var(--color-primary)]/30 transition-all"
          >
            <div class="w-12 h-12 rounded-lg bg-[var(--color-primary-light)] flex items-center justify-center text-[var(--color-primary)] mb-4 group-hover:scale-110 transition-transform">
              <Fragment set:html={link.icon} />
            </div>
            <h3 class="text-lg font-semibold text-[var(--color-text)] group-hover:text-[var(--color-primary)] transition-colors mb-2">
              {link.label}
            </h3>
            <p class="text-sm text-[var(--color-text-secondary)]">
              {link.description}
            </p>
            <div class="mt-4 flex items-center text-[var(--color-primary)] text-sm font-medium">
              Explore
              <svg class="ml-1 w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </section>

    <hr class="border-[var(--color-border)]" />

    {/* What I'm Learning */}
    <section class="py-12">
      <h2 class="text-2xl font-bold text-[var(--color-text)] mb-8">
        Skills & Interests
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {currentLearning.map((item) => (
          <div class="card">
            <div class="flex items-center gap-3 mb-3">
              <Badge text={item.topic} variant="primary" />
            </div>
            <p class="text-[var(--color-text-secondary)]">
              {item.description}
            </p>
          </div>
        ))}
      </div>
    </section>

    <hr class="border-[var(--color-border)]" />

    {/* Interests */}
    <section class="py-12">
      <h2 class="text-2xl font-bold text-[var(--color-text)] mb-8">
        Beyond Code
      </h2>
      
      <div class="flex flex-wrap gap-3">
        {interests.map((interest) => (
          <span class="tag">
            {interest}
          </span>
        ))}
      </div>
      
      <div class="mt-8 prose-custom max-w-2xl">
        <p class="text-[var(--color-text-secondary)]">
          I believe that having diverse interests makes me a better engineer. Whether it's understanding 
          the precision of coffee brewing, the problem-solving of mechanical keyboards, or the vast 
          worlds of science fiction, these interests inform how I approach problems and stay creative.
        </p>
      </div>
    </section>

    <hr class="border-[var(--color-border)]" />

    {/* Random Facts */}
    <section class="py-12">
      <h2 class="text-2xl font-bold text-[var(--color-text)] mb-8">
        Random Facts
      </h2>
      
      <ul class="space-y-3 text-[var(--color-text-secondary)]">
        <li class="flex items-start gap-3">
          <span class="text-[var(--color-accent)]">→</span>
          <span>I switch between macOS and Linux depending on what I'm working on</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-[var(--color-accent)]">→</span>
          <span>My current read: <em>Project Hail Mary</em> by Andy Weir</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-[var(--color-accent)]">→</span>
          <span>I prefer mechanical keyboards with clicky switches (sorry, coworkers!)</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-[var(--color-accent)]">→</span>
          <span>My coffee setup: V60 pour-over with freshly ground beans</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-[var(--color-accent)]">→</span>
          <span>I try to hike at least once a month to clear my head</span>
        </li>
      </ul>
    </section>

    <hr class="border-[var(--color-border)]" />

    {/* Get In Touch */}
    <section class="py-12">
      <div class="card max-w-2xl mx-auto text-center">
        <h2 class="text-2xl font-bold text-[var(--color-text)] mb-4">
          Let's Connect
        </h2>
        <p class="text-[var(--color-text-secondary)] mb-6">
          Whether you want to discuss a project, share book recommendations, 
          or just say hello, I'd love to hear from you.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/contact" class="btn-primary">
            Get in Touch
          </a>
          <a 
            href="https://twitter.com/yourusername" 
            target="_blank" 
            rel="noopener noreferrer"
            class="btn-secondary"
          >
            Follow on Twitter
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
