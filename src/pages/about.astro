---
import BaseLayout from '../layouts/BaseLayout.astro';
import Badge from '../components/Badge.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const currentLearning = [
  { topic: 'Healthcare Data Systems', description: 'Clinical data delivery and reporting platforms' },
  { topic: 'SQL Optimization', description: 'Snowflake query performance and monitoring' },
  { topic: 'AI-Assisted Support', description: 'Leveraging LLMs for problem-solving' },
];

const currentlyWorkingOn = [
  { item: 'Platform Support', description: 'Supporting payer clients at athenahealth' },
  { item: 'Side Projects', description: 'Social Sentiment Pipeline & CodeReview Lens' },
  { item: 'Personal Website', description: 'This site - built with Astro and Tailwind' },
];

const interests = [
  'Healthcare technology',
  'Data engineering',
  'AI tools & automation',
  'Support workflows',
  'Backend development',
  'Open source',
  'Learning in public',
  'Problem-solving',
];

const personalLinks = [
  { 
    label: 'Blog', 
    href: '/blog', 
    description: 'Thoughts on software engineering',
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/></svg>'
  },
  { 
    label: 'Projects', 
    href: '/projects', 
    description: 'Things I have built',
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>'
  },
  { 
    label: 'Digital Garden', 
    href: '/garden', 
    description: 'Growing ideas and notes',
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>'
  },
];
---

<BaseLayout 
  title="About | Liam Nguyen"
  description="A bit about me, my interests, and what I am currently working on."
>
  <div class="container-custom">
    <Breadcrumb items={[
      { label: 'Home', href: '/' },
      { label: 'About' }
    ]} />
    
    {/* Hero Section */}
    <section class="py-12 lg:py-20">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">
        {/* Avatar */}
        <div class="lg:col-span-1">
          <div class="w-48 h-48 mx-auto lg:mx-0 rounded-full bg-gradient-to-br from-emerald-500 to-teal-500 flex items-center justify-center shadow-xl">
            <span class="text-5xl font-bold text-white">LN</span>
          </div>
        </div>
        
        {/* Intro */}
        <div class="lg:col-span-2">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-foreground mb-6">
            Hi, I am Liam
          </h1>
          
          <div class="space-y-4 text-lg text-muted-foreground leading-relaxed">
            <p>
              I'm a Platform Support Associate at athenahealth based in Belfast, ME, supporting payer clients
              with clinical data delivery and reporting systems. I bridge communication between technical teams
              and clients while continuously improving our support workflows.
            </p>
            <p>
              My background is in Computer Science from University of Manitoba, and I'm passionate about
              building side projects that solve real problems. I work with Python, Java, SQL, and leverage
              AI tools to accelerate learning and problem-solving in my day-to-day work.
            </p>
            <p>
              This website is my digital home - a place to document my projects, share what I'm learning,
              and showcase my growing technical skills. Feel free to explore and reach out!
            </p>
          </div>
        </div>
      </div>
    </section>

    <hr class="border-white/10" />

    {/* Currently Section */}
    <section class="py-12">
      <h2 class="text-2xl font-bold text-foreground mb-8">
        Currently
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="card">
          <h3 class="text-lg font-semibold text-foreground mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
            </svg>
            Learning
          </h3>
          <ul class="space-y-3">
            {currentLearning.map((item) => (
              <li class="flex items-start gap-3">
                <span class="text-fuchsia-400 mt-1">•</span>
                <div>
                  <span class="font-medium text-foreground">{item.topic}</span>
                  <span class="text-muted-foreground"> — {item.description}</span>
                </div>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="card">
          <h3 class="text-lg font-semibold text-foreground mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
            Working On
          </h3>
          <ul class="space-y-3">
            {currentlyWorkingOn.map((item) => (
              <li class="flex items-start gap-3">
                <span class="text-fuchsia-400 mt-1">•</span>
                <div>
                  <span class="font-medium text-foreground">{item.item}</span>
                  <span class="text-muted-foreground"> — {item.description}</span>
                </div>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    <hr class="border-white/10" />

    {/* Personal Links */}
    <section class="py-12">
      <h2 class="text-2xl font-bold text-foreground mb-8">
        Explore My Work
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {personalLinks.map((link) => (
          <a 
            href={link.href}
            class="card group hover:border-violet-500/30 transition-all"
          >
            <div class="w-12 h-12 rounded-lg bg-emerald-500/10 flex items-center justify-center text-emerald-400 mb-4 group-hover:scale-110 transition-transform">
              <Fragment set:html={link.icon} />
            </div>
            <h3 class="text-lg font-semibold text-foreground group-hover:text-emerald-400 transition-colors mb-2">
              {link.label}
            </h3>
            <p class="text-sm text-muted-foreground">
              {link.description}
            </p>
            <div class="mt-4 flex items-center text-emerald-400 text-sm font-medium">
              Explore
              <svg class="ml-1 w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </section>

    <hr class="border-white/10" />

    {/* Skills & Interests */}
    <section class="py-12">
      <h2 class="text-2xl font-bold text-foreground mb-8">
        Skills & Interests
      </h2>
      
      <div class="flex flex-wrap gap-3">
        {interests.map((interest) => (
          <span class="tag">
            {interest}
          </span>
        ))}
      </div>
      
      <div class="mt-8 max-w-2xl">
        <p class="text-muted-foreground">
          I'm focused on building technical skills through hands-on projects and learning from real-world
          support scenarios. My interests in healthcare tech, data engineering, and AI tools align with
          my career goals of becoming a stronger backend engineer.
        </p>
      </div>
    </section>

    <hr class="border-white/10" />

    {/* Random Facts */}
    <section class="py-12">
      <h2 class="text-2xl font-bold text-foreground mb-8">
        Random Facts
      </h2>
      
      <ul class="space-y-3 text-muted-foreground">
        <li class="flex items-start gap-3">
          <span class="text-fuchsia-400">→</span>
          <span>Started at athenahealth in November 2024, learning healthcare tech daily</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-fuchsia-400">→</span>
          <span>Use company-authorized AI tools to bridge knowledge gaps and accelerate learning</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-fuchsia-400">→</span>
          <span>Built side projects with Python, Java, PostgreSQL, and Redis</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-fuchsia-400">→</span>
          <span>AWS Certified Cloud Practitioner & Agentic AI Champion</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-fuchsia-400">→</span>
          <span>Based in Belfast, ME - enjoying the tech scene in Maine</span>
        </li>
      </ul>
    </section>

    <hr class="border-white/10" />

    {/* Get In Touch */}
    <section class="py-12">
      <div class="card max-w-2xl mx-auto text-center">
        <h2 class="text-2xl font-bold text-foreground mb-4">
          Let's Connect
        </h2>
        <p class="text-muted-foreground mb-6">
          Whether you want to discuss a project, share book recommendations, 
          or just say hello, I'd love to hear from you.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/contact" class="btn-primary">
            Get in Touch
          </a>
          <a
            href="https://github.com/HeyItWorked"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary"
          >
            View on GitHub
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
