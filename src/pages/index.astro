---
import BaseLayout from '../layouts/BaseLayout.astro';
import IntroCard from '../components/cards/IntroCard.astro';
import TechStackCard from '../components/cards/TechStackCard.astro';
import StatusCard from '../components/cards/StatusCard.astro';
import ProjectCard from '../components/cards/ProjectCard.astro';
import GitHubStatsCard from '../components/cards/GitHubStatsCard.astro';
import SocialLinksCard from '../components/cards/SocialLinksCard.astro';
import QuoteCard from '../components/cards/QuoteCard.astro';
---

<BaseLayout 
  title="Liam Nguyen | Platform Support Associate"
  description="Platform Support Associate at athenahealth. Supporting payer clients with clinical data delivery and reporting systems."
>
  <main class="relative min-h-screen overflow-hidden bg-[#020617]">
    {/* Dot grid background */}
    <div class="dot-grid pointer-events-none absolute inset-0 z-0" />

    {/* Gradient orbs */}
    <div
      class="animate-pulse-glow pointer-events-none absolute -left-32 -top-32 z-0 h-[500px] w-[500px] rounded-full bg-emerald-500/20 blur-[128px]"
      aria-hidden="true"
    />
    <div
      class="animate-pulse-glow pointer-events-none absolute -bottom-32 -right-32 z-0 h-[500px] w-[500px] rounded-full bg-teal-500/20 blur-[128px]"
      style="animation-delay: 4s;"
      aria-hidden="true"
    />

    {/* Bento Grid */}
    <section class="relative z-10 mx-auto max-w-7xl px-4 pb-16 pt-24 sm:px-6 lg:px-8">
      <div class="grid auto-rows-auto grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4 lg:grid-rows-3">
        {/* Row 1-2: Main Intro (2x2) + Tech Stack (1x1) + Status (1x1) */}
        <IntroCard />
        <TechStackCard />
        <StatusCard />

        {/* Row 3: Featured Project (2x1) + GitHub Stats (1x1) + Social Links (1x1) */}
        <ProjectCard />
        <GitHubStatsCard />
        <SocialLinksCard />

        {/* Quote card fills remaining */}
        <QuoteCard />
      </div>
    </section>
  </main>
</BaseLayout>
