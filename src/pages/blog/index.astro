---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Badge from '../../components/Badge.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');

// Filter out drafts and sort by pubDate desc
const posts = allPosts
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

// Get all unique tags
const allTags = [...new Set(posts.flatMap((post) => post.data.tags))].sort();

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}
---

<BaseLayout 
  title="Blog | Liam Nguyen"
  description="Thoughts on software engineering, technology, and continuous learning."
>
  <div class="container-custom">
    <Breadcrumb items={[
      { label: 'Home', href: '/' },
      { label: 'Blog' }
    ]} />
    
    {/* Header */}
    <header class="py-12 lg:py-16">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-foreground mb-6">
        Blog
      </h1>
      <p class="text-lg md:text-xl text-muted-foreground max-w-2xl">
        Thoughts on software engineering, technology, and my journey as a developer. 
        I write about what I'm learning, building, and thinking about.
      </p>
    </header>

    {/* Tag Filter */}
    {allTags.length > 0 && (
      <div class="mb-12">
        <p class="text-sm text-muted-foreground mb-3">Filter by topic:</p>
        <div class="flex flex-wrap gap-2">
          <a 
            href="/blog" 
            class="tag"
          >
            All
          </a>
          {allTags.map((tag) => (
            <a 
              href={`/blog?tag=${tag}`}
              class="tag"
            >
              #{tag}
            </a>
          ))}
        </div>
      </div>
    )}

    {/* Posts List */}
    <section class="pb-16 lg:pb-24">
      <div class="space-y-6">
        {posts.map((post) => (
          <article class="card group">
            <div class="flex flex-col md:flex-row md:items-start gap-4 md:gap-8">
              {/* Date */}
              <time class="text-sm text-muted-foreground md:w-32 flex-shrink-0 md:pt-1">
                {formatDate(post.data.pubDate)}
              </time>
              
              {/* Content */}
              <div class="flex-1">
                <h2 class="text-xl md:text-2xl font-bold text-foreground mb-2 group-hover:text-emerald-400 transition-colors">
                  <a href={`/blog/${post.slug}`}>
                    {post.data.title}
                  </a>
                </h2>
                
                <p class="text-muted-foreground mb-4 leading-relaxed">
                  {post.data.description}
                </p>
                
                <div class="flex flex-wrap gap-2">
                  {post.data.tags.map((tag) => (
                    <Badge text={`#${tag}`} variant="default" />
                  ))}
                </div>
              </div>
              
              {/* Arrow */}
              <div class="hidden md:flex items-center text-muted-foreground group-hover:text-violet-400 transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>
          </article>
        ))}
      </div>
      
      {posts.length === 0 && (
        <div class="text-center py-16">
          <p class="text-muted-foreground">No posts yet. Check back soon!</p>
        </div>
      )}
    </section>
  </div>
</BaseLayout>
