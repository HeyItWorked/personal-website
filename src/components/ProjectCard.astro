---
import Badge from './Badge.astro';

interface Props {
  title: string;
  description: string;
  techStack: string[];
  image?: string;
  liveUrl?: string;
  repoUrl?: string;
  slug: string;
}

const { title, description, techStack, image, liveUrl, repoUrl, slug } = Astro.props;
---

<article class="group card flex flex-col h-full relative overflow-hidden border-t-2 border-transparent hover:border-t-2 hover:border-[var(--color-primary)] transition-all duration-300">
  {/* Hover gradient background */}
  <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-primary)]/5 to-[var(--color-accent)]/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
  
  {/* Image */}
  {image && (
    <a href={`/projects/${slug}`} class="block mb-4 -mx-6 -mt-6 overflow-hidden rounded-t-lg relative z-10">
      <img 
        src={image} 
        alt={`${title} preview`}
        class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105"
        loading="lazy"
      />
    </a>
  )}
  
  {/* Content */}
  <div class="flex-1 flex flex-col relative z-10">
    <div class="flex items-start justify-between gap-3">
      <h3 class="text-2xl font-bold text-[var(--color-text)] mb-2 group-hover:text-[var(--color-primary)] transition-colors">
        <a href={`/projects/${slug}`}>
          {title}
        </a>
      </h3>
      
      {/* Arrow that slides in on hover */}
      <div class="text-[var(--color-primary)] transform translate-x-4 opacity-0 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-300 flex-shrink-0 mt-1">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </div>
    </div>
    
    <p class="text-[var(--color-text-secondary)] leading-relaxed mb-4 flex-1">
      {description}
    </p>
    
    {/* Tech Stack */}
    <div class="flex flex-wrap gap-2 mb-4">
      {techStack.map((tech) => (
        <Badge text={tech} variant="default" />
      ))}
    </div>
    
    {/* Links */}
    <div class="flex gap-3 pt-4 border-t border-[var(--color-border)]">
      <a 
        href={`/projects/${slug}`}
        class="inline-flex items-center text-sm font-medium text-[var(--color-primary)] hover:text-[var(--color-accent)] transition-colors"
      >
        View Details
        <svg class="ml-1 w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
      
      {liveUrl && (
        <a 
          href={liveUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-primary)] transition-colors"
        >
          Live Demo
          <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      )}
      
      {repoUrl && (
        <a 
          href={repoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-primary)] transition-colors"
        >
          Code
          <svg class="ml-1 w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>
      )}
    </div>
  </div>
</article>
