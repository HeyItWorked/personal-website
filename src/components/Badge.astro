---
interface Props {
  text: string;
  variant?: 'default' | 'primary' | 'accent';
}

const { text, variant = 'default' } = Astro.props;

const variantClasses = {
  default: 'border-white/10 bg-white/5 text-muted-foreground hover:bg-emerald-500/10 hover:text-emerald-400',
  primary: 'border-violet-500/30 bg-violet-500/10 text-violet-400',
  accent: 'border-fuchsia-500/30 bg-fuchsia-500/10 text-fuchsia-400',
};
---

<span class:list={[
  'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border transition-colors',
  variantClasses[variant]
]}>
  {text}
</span>
