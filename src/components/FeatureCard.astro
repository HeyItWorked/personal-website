---
interface Props {
  icon?: string;
  title: string;
  description: string;
  variant?: 'default' | 'accent';
}

const { icon, title, description, variant = 'default' } = Astro.props;
---

<div class="card group hover:border-violet-500/20 transition-all h-full">
  {icon && (
    <div class={`w-12 h-12 rounded-lg flex items-center justify-center mb-4 ${
      variant === 'accent'
        ? 'bg-fuchsia-500/10 text-fuchsia-400'
        : 'bg-violet-500/10 text-emerald-400'
    }`}>
      <Fragment set:html={icon} />
    </div>
  )}

  <h3 class="text-lg font-semibold text-foreground mb-2 group-hover:text-violet-400 transition-colors">
    {title}
  </h3>

  <p class="text-sm text-muted-foreground leading-relaxed">
    {description}
  </p>
</div>
