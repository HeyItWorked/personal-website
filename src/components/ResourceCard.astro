const style = typeStyles[type];
---

<a 
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={`group block rounded-lg border ${style.border} ${style.bg} p-4 transition-all hover:border-opacity-50 hover:scale-[1.02]`}
>
  <div class="flex items-start gap-3">
    <div class={`flex-shrink-0 w-10 h-10 rounded-lg ${style.icon} flex items-center justify-center`}>
      <Fragment set:html={style.svg} />
    </div>
    <div class="flex-1 min-w-0">
      <h4 class="font-semibold text-foreground group-hover:text-emerald-400 transition-colors text-sm">
        {title}
      </h4>
      {description && (
        <p class="text-xs text-muted-foreground mt-1 line-clamp-2">
          {description}
        </p>
      )}
    </div>
    <svg 
      class="w-4 h-4 text-muted-foreground group-hover:text-emerald-400 transition-colors flex-shrink-0" 
      fill="none" 
      stroke="currentColor" 
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
    </svg>
  </div>
</a>
