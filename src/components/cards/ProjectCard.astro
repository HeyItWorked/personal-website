---
import BentoCard from "../BentoCard.astro"

const techTags = ["Rust", "DNS Protocol", "UDP", "Binary Parsing"]
---

<BentoCard index={3} className="col-span-1 md:col-span-2">
  <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
    <div class="flex-1">
      <p class="mb-2 text-xs font-medium uppercase tracking-wider text-muted-foreground">
        Featured Project
      </p>
      <h3 class="text-lg font-semibold text-foreground">
        DNS Server in Rust
      </h3>
      <div class="mt-3 flex flex-wrap gap-2">
        {techTags.map((tag) => (
          <span
            class="rounded-full border border-white/10 bg-white/5 px-2.5 py-0.5 font-mono text-[11px] text-muted-foreground"
          >
            {tag}
          </span>
        ))}
      </div>
      <a
        href="/projects/dns-server-rust"
        class="mt-4 inline-flex items-center gap-1.5 text-sm font-medium text-emerald-400 transition-colors hover:text-emerald-300"
      >
        View Project
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
      </a>
    </div>
    <div class="relative h-32 w-full overflow-hidden rounded-xl border border-white/10 sm:h-36 sm:w-56">
      <img 
        src="/images/rust-dns.png" 
        alt="DNS Server in Rust"
        class="h-full w-full object-cover"
      />
    </div>
  </div>
</BentoCard>
