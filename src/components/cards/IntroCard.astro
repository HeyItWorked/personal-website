---
import BentoCard from "../BentoCard.astro"
---

<BentoCard
  index={0}
  className="col-span-1 row-span-2 flex flex-col justify-between md:col-span-2"
>
  {/* Status badge */}
  <div class="mb-6">
    <span class="inline-flex items-center gap-2 rounded-full border border-green-500/20 bg-green-500/10 px-3 py-1 text-xs font-medium text-green-400">
      <span class="relative flex h-2 w-2">
        <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-green-400 opacity-75"></span>
        <span class="relative inline-flex h-2 w-2 rounded-full bg-green-400"></span>
      </span>
      Currently working at athenahealth
    </span>
  </div>

  {/* Name + subtitle */}
  <div class="flex-1">
    <h1 class="text-5xl font-bold tracking-tight text-foreground md:text-6xl text-balance">
      Liam Nguyen
    </h1>
    <p class="mt-3 bg-gradient-to-r from-emerald-400 via-teal-400 to-cyan-400 bg-clip-text text-2xl font-semibold text-transparent md:text-3xl">
      Platform Support Associate
    </p>
    <p class="mt-4 max-w-md text-base leading-relaxed text-muted-foreground">
      Supporting payer clients at athenahealth with clinical data delivery and reporting systems. 
      Building side projects with Python, Java, and SQL. AWS Certified.
    </p>
  </div>

  {/* CTA buttons */}
  <div class="mt-8 flex flex-wrap gap-3">
    <a
      href="/projects"
      class="inline-flex items-center justify-center rounded-lg bg-emerald-500 px-5 py-2.5 text-sm font-medium text-white transition-colors hover:bg-emerald-600"
    >
      View Projects
    </a>
    <a
      href="/about"
      class="inline-flex items-center justify-center rounded-lg border border-white/10 bg-white/5 px-5 py-2.5 text-sm font-medium text-foreground transition-colors hover:border-emerald-500/30 hover:bg-white/10"
    >
      More About Me
    </a>
  </div>
</BentoCard>
