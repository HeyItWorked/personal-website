---
import BentoCard from "../BentoCard.astro"
---

<BentoCard index={2} className="col-span-1 flex flex-col justify-center gap-4">
  <div class="flex items-center gap-3">
    <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-white/5">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground"><path d="M16 20V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/><rect width="20" height="14" x="2" y="6" rx="2"/></svg>
    </div>
    <div>
      <p class="text-sm font-medium text-foreground">
        Platform Support Associate
      </p>
      <span class="inline-flex items-center gap-1.5 text-xs text-green-400">
        <span class="h-1.5 w-1.5 rounded-full bg-green-400"></span>
        athenahealth
      </span>
    </div>
  </div>

  <div class="flex items-center gap-3">
    <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-white/5">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
    </div>
    <p class="text-sm text-muted-foreground">
      Belfast, ME
    </p>
  </div>

  <div class="flex items-center gap-3">
    <div class="flex h-8 w-8 items-center justify-center rounded-lg bg-white/5">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
    </div>
    <p class="text-sm text-muted-foreground">
      Started Nov 2024
    </p>
  </div>
</BentoCard>
