---
import BentoCard from "../BentoCard.astro"

// Real GitHub stats (fetched from API)
const publicRepos = 17
const accountSince = "2018"
---

<BentoCard index={4} className="col-span-1 flex flex-col justify-center">
  <p class="mb-3 text-xs font-medium uppercase tracking-wider text-muted-foreground">
    GitHub
  </p>
  <p class="text-4xl font-bold text-foreground">
    {publicRepos}
  </p>
  <p class="mt-1 text-sm text-muted-foreground">
    public repositories
  </p>
  
  {/* Mini repo activity indicators */}
  <div class="mt-4 flex gap-1">
    {[0.8, 0.6, 0.9, 0.5, 0.7, 0.4, 0.8, 0.6, 0.9, 0.5, 0.7, 0.4, 0.8, 0.6, 0.5, 0.9, 0.7].map((opacity, i) => (
      <div
        class="h-3 w-3 rounded-sm"
        style={`background-color: rgba(16, 185, 129, ${opacity})`}
      />
    ))}
  </div>
  
  <p class="mt-3 text-xs text-muted-foreground">
    Active since {accountSince} · <a href="https://github.com/HeyItWorked" target="_blank" rel="noopener noreferrer" class="text-emerald-400 hover:text-emerald-300">View Profile →</a>
  </p>
</BentoCard>
