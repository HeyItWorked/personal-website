---
import { cn } from "../lib/utils"

interface Props {
  className?: string
  index?: number
}

const { className, index = 0 } = Astro.props

// Calculate animation delay: 0.3s base + 0.1s * index
const animationDelay = `${0.3 + index * 0.1}s`
---

<div
  class={cn(
    "bento-card rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur-sm transition-colors hover:border-emerald-500/30",
    className
  )}
  style={`animation-delay: ${animationDelay}`}
>
  <slot />
</div>
